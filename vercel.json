{
  "version": 2,
  "builds": [
    {
      "src": "api/converter.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb",
        "maxDuration": 60,
        "memory": 1024,
        "runtime": "python3.9"
      } 
    },
    {
        "src": "static/**",
        "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/converter.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    {
        "src": "/(.*)",
        "dest": "static/$1"
    }
  ]
} 