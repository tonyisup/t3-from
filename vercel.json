{
  "version": 2,
  "builds": [
    {
      "src": "api/converter.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" } 
    },
    {
        "src": "static/**",
        "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/converter.py"
    },
    {
        "src": "/(.*)",
        "dest": "static/$1"
    }
  ]
} 